
<div class="flex flex-col yozakura w-full h-full">

    <h3 class="flex-none text-lg mb-2">{{localize 'PlayerActorSheet.advantages'}}</h3>

    <div class="flex-1">
<textarea name="system.advantages" data-dtype="String" class="w-full h-full min-h-256 yozakura">{{data.system.advantages}}</textarea>
    </div>

    <div class="flex-none">
        <h3>{{localize 'PlayerActorSheet.journalEntries'}} <i class="clear-journaEntries fas fa-trash text-red-800 hover:text-red-500"></i></h3>
        <p id="droppable-journaux" class="p-2 border-2 border-black">
            {{#each data.system.journalEntries}}
                <a class="content-link" data-uuid="{{uuid}}" data-id="{{id}}" data-type="{{type}}"><i class="fas fa-file-lines"></i>{{name}}</a>
            {{/each}}
        </p>
        
    </div>

</div>
